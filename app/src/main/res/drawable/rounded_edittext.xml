<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#000000" /> <!-- Matches your black app background -->

    <!-- Border stroke -->
    <stroke
        android:width="2dp"
        android:color="#00FFFF" /> <!-- Neon cyan color for border -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Inner padding (makes text not touch edges) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
