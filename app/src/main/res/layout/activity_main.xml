<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/promptDisplayTextView"
        android:layout_width="300dip"
        android:layout_height="45dip"
        android:layout_marginTop="95dp"
        android:text="@string/please_login_or_signup"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameDisplayTextView"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="23dp"
        android:text="@string/username"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/promptDisplayTextView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/usernameInputEditText"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="36dp"
        android:hint="@string/enter_your_username"
        android:inputType="textAutoComplete"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/promptDisplayTextView"
        app:layout_constraintBaseline_toBaselineOf="@id/usernameDisplayTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/passwordDisplayTextView"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginStart="23dp"
        android:text="@string/password"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameDisplayTextView"
        />

    <EditText
        android:id="@+id/passwordInputEditText"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="36dp"
        android:hint="@string/enter_your_password"
        app:layout_constraintBaseline_toBaselineOf="@id/passwordDisplayTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/login_Button"
        android:layout_width="390dp"
        android:layout_height="95dp"
        android:layout_marginTop="36dp"
        android:text="@string/login"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordInputEditText"
        />


    <Button
        android:id="@+id/signup_Button"
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:text="@string/signup"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@id/login_Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>