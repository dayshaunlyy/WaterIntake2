<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <!-- Height (Feet) -->
    <EditText
        android:id="@+id/feetInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/height_feet"
        android:textColor="#00FFFF"
        android:textColorHint="#00FFFF"
        android:backgroundTint="#00FFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Height (Inches) -->
    <EditText
        android:id="@+id/inchInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/height_inches"
        android:textColor="#00FFFF"
        android:textColorHint="#00FFFF"
        android:backgroundTint="#00FFFF"
        app:layout_constraintTop_toBottomOf="@id/feetInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Weight -->
    <EditText
        android:id="@+id/weightInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/weight_lbs_or_kg"
        android:textColor="#00FFFF"
        android:textColorHint="#00FFFF"
        android:backgroundTint="#00FFFF"
        app:layout_constraintTop_toBottomOf="@id/inchInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />


    <!-- Unit Toggle -->
    <ToggleButton
        android:id="@+id/unitToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="@string/kg"
        android:textOff="@string/lbs"
        android:textColor="#00FFFF"
        android:backgroundTint="#222222"
        app:layout_constraintTop_toBottomOf="@id/weightInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Calculate Button -->
    <Button
        android:id="@+id/calcBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="#000000"
        android:backgroundTint="#00FFFF"
        app:layout_constraintTop_toBottomOf="@id/unitToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Total Water Text -->
    <TextView
        android:id="@+id/totalWaterText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total:"
        android:textColor="#00FFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/calcBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Hourly Water Text -->
    <TextView
        android:id="@+id/hourlyWaterText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hourly:"
        android:textColor="#00FFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/totalWaterText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
