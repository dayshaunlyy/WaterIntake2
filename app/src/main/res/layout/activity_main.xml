<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome, User!"
        android:textColor="#00FFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Height -->
    <TextView
        android:id="@+id/tvUserHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Height: 175 cm"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Weight -->
    <TextView
        android:id="@+id/tvUserWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weight: 70 kg"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserHeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Workout Level -->
    <TextView
        android:id="@+id/tvUserWorkoutLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Workout Level: Moderate"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Creatine Label -->
    <TextView
        android:id="@+id/creatine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takes Creatine?"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tvUserWorkoutLevel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Creatine Logo -->
    <ImageView
        android:id="@+id/creatineLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        android:contentDescription="Creatine Logo"
        app:layout_constraintTop_toBottomOf="@id/creatine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Water Goal -->
    <TextView
        android:id="@+id/tvWaterGoal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Water Goal: 2.5 L"
        android:textColor="#00FFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/creatineLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#00FFFF"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvWaterGoal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
