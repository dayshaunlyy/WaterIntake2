<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp"
    tools:context=".ui.UserDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- All your previous content starts here -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome, User!"
            android:textColor="#00FFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/unitToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Standard"
                android:textColor="#00FFFF"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/transferSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00FFFF"
                android:textOff="lbs"
                android:textOn="kg" />

            <TextView
                android:id="@+id/textMetric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Metric"
                android:textColor="#00FFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/EnterWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Weight"
            android:textColor="#00FFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUserWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="Weight (kg)"
            android:inputType="numberDecimal"
            android:textColor="#00FFFF"
            android:textColorHint="#00FFFF" />

        <TextView
            android:id="@+id/EnterHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Height"
            android:textColor="#00FFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etUserHeightCm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="Height (cm)"
            android:inputType="numberDecimal"
            android:textColor="#00FFFF"
            android:textColorHint="#00FFFF" />

        <LinearLayout
            android:id="@+id/standardHeightLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/etUserFeet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:hint="Feet"
                android:inputType="numberDecimal"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF" />

            <EditText
                android:id="@+id/etUserInches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:hint="Inches"
                android:inputType="numberDecimal"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/workoutLevelLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Workout Level"
            android:textColor="#00FFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/workoutLevelSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext" />

        <TextView
            android:id="@+id/TakeCreatine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Creatine"
            android:textColor="#00FFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/creatineSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textOff="No"
            android:textOn="Yes"
            android:thumbTint="#00FFFF"
            android:trackTint="#003333" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFF"
            android:text="Save Changes"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFF"
            android:text="Log Out"
            android:textColor="#000000" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_nav_userdashboard" />

    </LinearLayout>
</ScrollView>
